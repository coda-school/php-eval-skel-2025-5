{% extends 'base.html.twig' %}

{% block title %}Profil - Swiffer{% endblock %}

{% block page_name %}Profil{% endblock %}

{% block body %}
    <main class="profile">
        <div class="banner"></div>

        <div class="avatar"></div>

        <div class="profile-info">
            <h2>@{{ app.user.username|default('username') }}</h2>
            <p>Explorateur du web et passionné de design. </p>

            <div class="stats">
                <div class="stat"><strong>120</strong> <span>Abonnements</span></div>
                <div class="stat"><strong>340</strong> <span>Abonnés</span></div>
            </div>

            <div style="margin-top: 30px; border-top: 1px solid var(--border); padding-top: 20px;">
                <h3 style="font-size: 1.1rem; margin-bottom: 15px;">Derniers Posts</h3>
                <div style="padding: 15px; background: rgba(255,255,255,0.05); border-radius: 12px; border: 1px solid var(--border);">
                    <p style="margin:0; font-size: 0.9rem; opacity: 0.8;">test</p>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
